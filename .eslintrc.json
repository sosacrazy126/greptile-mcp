{
  "root": true,
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 2022,
    "sourceType": "module",
    "project": "./tsconfig.json"
  },
  "plugins": ["@typescript-eslint", "prettier"],
  "extends": [
    "eslint:recommended",
    "prettier"
  ],
  "rules": {
    "prettier/prettier": "error",
    "no-unused-vars": "off",
    "no-console": ["warn", { "allow": ["warn", "error", "log"] }],
    "prefer-const": "error"
  },
  "overrides": [
    {
      "files": ["src/cli.ts"],
      "rules": {
        "no-console": "off"
      }
    }
  ],
  "env": {
    "node": true,
    "es2022": true
  },
  "ignorePatterns": ["dist/", "node_modules/", "*.js", "*.cjs", "tsup.config.ts"]
}