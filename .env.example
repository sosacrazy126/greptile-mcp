# Greptile MCP Server Configuration

# Required: Greptile API key from https://app.greptile.com/settings/api
GREPTILE_API_KEY=your_greptile_api_key_here

# Required: GitHub/GitLab personal access token with repository access
GITHUB_TOKEN=your_github_token_here

# Optional: Greptile API base URL (usually don't need to change)
GREPTILE_BASE_URL=https://api.greptile.com/v2

# Transport method: 'sse' for HTTP server, 'stdio' for direct MCP client communication
TRANSPORT=sse

# Host and port for SSE transport (ignored for stdio)
HOST=0.0.0.0
PORT=8050

# Optional: Enable debug logging
DEBUG=false
LOG_LEVEL=info 